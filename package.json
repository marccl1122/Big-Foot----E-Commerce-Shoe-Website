{
  "name": "big-foot-e-commerce-shoe-website",
  "version": "1.0.0",
  "description": "Big Foot CA - An online sneaker marketplace.",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "deploy": "gh-pages -d public"
  },
  "keywords": ["sneakers", "ecommerce", "marketplace"],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "gh-pages": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
